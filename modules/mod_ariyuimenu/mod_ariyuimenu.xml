<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6.0" type="module" method="upgrade" client="site">
	<name>ARI YUI Menu</name>
	<author>ARI Soft</author>
	<creationDate>October 2013</creationDate>
	<copyright>ARI Soft</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@ari-soft.com</authorEmail>
	<authorUrl>www.ari-soft.com</authorUrl>
	<version>2.1.2</version>
	<description>ARI_YUI_MENU_MODULE</description>
	<files>
		<filename module="mod_ariyuimenu">mod_ariyuimenu.php</filename>
		<filename>index.html</filename>
		<folder>mod_ariyuimenu/</folder>
		<folder>tmpl/</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_ariyuimenu.ini</language>
		<language tag="he-IL">language/he-IL/he-IL.mod_ariyuimenu.ini</language>
		<language tag="sk-SK">language/sk-SK/sk-SK.mod_ariyuimenu.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.mod_ariyuimenu.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.mod_ariyuimenu.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="menutype" type="menu" default="mainmenu" label="AYM_PARAM_MENUTYPE_LABEL" description="AYM_PARAM_MENUTYPE_DESCR" />
				<field name="moduleclass_sfx" type="text" default="" label="AYM_PARAM_CLASSSUFFIX_LABEL" description="PARAMMODULECLASSSUFFIX" />
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="startLevel" type="text" default="1" label="AYM_PARAM_STARTLEVEL_LABEL" description="AYM_PARAM_STARTLEVEL_DESCR16" />
				<field name="endLevel" type="text" default="-1" label="AYM_PARAM_ENDLEVEL_LABEL" description="AYM_PARAM_ENDLEVEL_DESCR" />
				<field name="onlyActiveItems" type="list" default="0" label="AYM_PARAM_ACTIVEITEMS_LABEL" description="AYM_PARAM_ACTIVEITEMS_DESCR">
					<option value="0">AYM_NO</option>
					<option value="1">AYM_YES</option>
				</field>
				<field name="@spacer" type="spacer" default="" label="" description="" />
				<field name="safeMode" type="list" default="1" label="AYM_SAFEMODE_LABEL" description="AYM_SAFEMODE_DESCR">
					<option value="0">AYM_NO</option>
					<option value="1">AYM_YES</option>
				</field>
				<field name="remainActive" type="list" default="0" label="AYM_REMAINACTIVE_LABEL" description="AYM_REMAINACTIVE_DESCR">
					<option value="0">AYM_NO</option>
					<option value="1">AYM_YES</option>
				</field>
				<field name="width" type="text" default="" size="10" label="AYM_PARAM_WIDTH_LABEL" description="AYM_PARAM_WIDTH_DESCR" />
				<field name="classname" type="text" default="" size="10" label="AYM_PARAM_CLASSNAME_LABEL" description="AYM_PARAM_CLASSNAME_DESCR" />
				<field name="submenualignment" type="text" default="" size="10" label="AYM_PARAM_SUBMENUALIGNMENT_LABEL" description="AYM_PARAM_SUBMENUALIGNMENT_DESCR" />
				<field name="showdelay" type="text" default="250" size="5" label="AYM_PARAM_SHOWDELAY_LABEL" description="AYM_PARAM_SHOWDELAY_DESCR" />
				<field name="hidedelay" type="text" default="750" size="5" label="AYM_PARAM_HIDEDELAY_LABEL" description="AYM_PARAM_HIDEDELAY_DESCR" />
				<field name="maxheight" type="text" default="0" size="5" label="AYM_PARAM_MAXHEIGHT_LABEL" description="AYM_PARAM_MAXHEIGHT_DESCR" />
				<field name="minscrollheight" type="text" default="90" size="5" label="AYM_PARAM_MINSCROLLHEIGHT_LABEL" description="AYM_PARAM_MINSCROLLHEIGHT_DESCR" />
				<field name="scrollincrement" type="text" default="1" size="5" label="AYM_SCROLLINCREMENT_LABEL" description="AYM_SCROLLINCREMENT_DESCR" />
				<field name="fontSize" type="text" default="11px" size="10" label="AYM_FONTSIZE_LABEL" description="AYM_FONTSIZE_DESCR" />
				<field name="fontWeight" type="list" default="normal" label="AYM_FONTWEIGHT_LABEL" description="AYM_FONTWEIGHT_DESCR">
					<option value="normal">AYM_FONTWEIGHT_OPT_NORMAL</option>
					<option value="bold">AYM_FONTWEIGHT_OPT_BOLD</option>
					<option value="bolder">AYM_FONTWEIGHT_OPT_BOLDER</option>
					<option value="lighter">AYM_FONTWEIGHT_OPT_LIGHTER</option>
				</field>
				<field name="textTransform" type="list" default="none" label="AYM_TEXTTRANSFORM_LABEL" description="AYM_TEXTTRANSFORM_DESCR">
					<option value="none">AYM_TEXTTRANSFORM_OPT_NONE</option>
					<option value="capitalize">AYM_TEXTTRANSFORM_OPT_CAPITALIZE</option>
					<option value="uppercase">AYM_TEXTTRANSFORM_OPT_UPPERCASE</option>
					<option value="lowercase">AYM_TEXTTRANSFORM_OPT_LOWERCASE</option>
				</field>
				<field name="advSeparator" type="list" default="0" label="AYM_ADVSEP_LABEL" description="AYM_ADVSEP_DESCR">
					<option value="0">AYM_NO</option>
					<option value="1">AYM_YES</option>
				</field>
				<field name="showHiddenItems" type="list" default="0" label="AYM_SHOWHIDDEN_LABEL" description="AYM_SHOWHIDDEN_DESCR">
					<option value="0">AYM_NO</option>
					<option value="1">AYM_YES</option>
				</field>
				<field name="highlightCurrentItem" type="list" default="1" label="AYM_HIGHLIGHTCURITEM_LABEL" description="AYM_HIGHLIGHTCURITEM_DESCR">
					<option value="0">AYM_NO</option>
					<option value="1">AYM_YES</option>
				</field>
				<field name="direction" type="list" default="horizontal" label="AYM_MENUDIR_LABEL" description="AYM_MENUDIR_DESCR">
					<option value="horizontal">AYM_MENUDIR_OPT_HORIZONTAL</option>
					<option value="vertical">AYM_MENUDIR_OPT_VERTICAL</option>
				</field>
				<field name="customstyle" type="textarea" rows="10" cols="50" label="AYM_STYLE_LABEL" description="AYM_STYLE_DESCR" />
			</fieldset>
		</fields>
	</config>
</extension>