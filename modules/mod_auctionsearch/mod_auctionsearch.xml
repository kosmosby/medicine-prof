<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" method="upgrade">
    <name>Auction Factory Quick Search</name>
    <author>Picasso_ss</author>
    <version>1.0.0</version>
    <description>A simple Auction Search Header replacement for Auction Search Component.</description>
    <files>
        <filename>mod_auctionsearch.xml</filename>
        <filename module="mod_auctionsearch">mod_auctionsearch.php</filename>
        <filename>index.html</filename>
		<folder>assets</folder>
		<folder>tmpl</folder>
    </files>
	<config>
        <fields name="params">
            <fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
				<field name="searchcategory" type="list" default="yes" label="Show Category?" description="Show or Hide the category in the search module">
					<option value="yes">Yes</option>
					<option value="no">No</option>
				</field>
				<field name="theme" type="list" default="blue" label="Choose theme" description="Select the CSS theme from the list">
					<option value="babyblue">Baby Blue</option>
					<option value="dark">Dark</option>
					<option value="grey">Grey</option>
					<option value="red">Red</option>
					<option value="orange">Orange</option>
					<option value="original">Original A.F</option>
					<option value="white">White</option>
				</field>
			</fieldset>            
        </fields>
    </config>
</extension>