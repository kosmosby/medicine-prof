<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" >
	<name>AwdWall Groups(1.6) </name>
	<author>AWDsolution.com</author>
	<creationDate>Apr 2011</creationDate>
	<copyright>AWDsolution.com</copyright>
	<license>@license GNU/GPL http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>support@awdsolution.com</authorEmail>
	<authorUrl>http://www.awdsolution.com</authorUrl>
	<version>3.0</version>
	<description>Group LIST module will display the latest group made on jomwall</description> 
	<config><fields name="params"><fieldset name="basic">
		<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<field name="count" type="text" default="5" label="Count" description="The number of items to display (default 5)" />
		<field name="ordering1" type="list" default="ordering" label="Ordering" description="Ordering options">
			<option value="0">Recently Added</option>
			<option value="1">Randomly</option>
	  	</field> 
	</fieldset></fields></config>
	<files> 
		<filename module="mod_awdwallgroups">mod_awdwallgroups.php</filename>
		<filename module="mod_awdwallgroups">helper.php</filename>
		<filename module="mod_awdwallgroups">index.html</filename> 
		<folder>tmpl</folder>
		<folder>css</folder>
		<folder>images</folder>
	</files>
  <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.mod_awdwallgroups.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_awdwallgroups.sys.ini</language>
    </languages>
</extension>
