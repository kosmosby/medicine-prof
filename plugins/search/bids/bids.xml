<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="search" method="upgrade">
	<name>plg_search_bids</name>
	<author>TheFactory</author>
	<creationDate>November 2010</creationDate>
	<copyright>comercial</copyright>
	<license>comercial</license>
	<authorEmail>support@thefactory.ro</authorEmail>
	<authorUrl>www.thefactory.ro</authorUrl>
	<version>1.5</version>
	<description>Allows Searching in Auction Component</description>
	<files>
		<filename plugin="bids">bids.php</filename>
	</files>
    <languages>
        <language tag="en-GB">en-GB.plg_search_bids.ini</language>
    </languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text" size="5" default="50" label="Search Limit" description="Number of Search items to return"/>
			</fieldset>
		</fields>
	</config>
</extension>