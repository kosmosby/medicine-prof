		<view name="showinvoicingaddress" type="params" ui="all" label="" cssclass="cbregInvoice">
			<if name="invoicing_address_query" nametype="pluginparams:string" operator="=" value="2" valuetype="const:string" type="condition">
				<trigger group="user/plug_cbpaidsubscriptions/plugin" event="onxmlBeforeCbSubsDisplayOrSaveInvoice" results="extend" toxpathnode="../fieldset" mode="replaceorappend" keyattribute="name" />
				<extend toxpathnode="../fieldset[@name=&quot;invoicing_address&quot;]" fromxpathnode="/*/payaddressintegration[@view=&quot;showinvoicingaddressmandatory&quot;]/view/fieldset[@name=&quot;invoicing_address&quot;]/*" file="plugin/*/xml/edit.invoice" mandatory="false" mode="replaceorappend" keyattribute="name" />
