	<views>
		<view name="actiontype_groupjive" type="params" ui="admin">
			<param name="" type="spacer" display="2lines" label="" default="Create GroupJive categories and groups." />
			<if name="" nametype="data:int" operator="=" value="1" valuetype="const:int" type="condition">
				<left>
					<param name="" type="private" class="cbautoactionsActionGroupJive" method="installed" />
				</left>
				<then>
					<params name="groupjive" type="params" repeat="true" label="" display="2lines">
						<param name="mode" type="list" default="1" translate-default="no" label="Mode" description="Select what CB GroupJive action to perform.">
							<option value="1">Join Groups</option>
							<option value="4">Leave Groups</option>
							<option value="2">New Group</option>
							<option value="3">New Category</option>
						</param>
						<if name="mode" nametype="param:string" operator="in" value="1|*|4" valuetype="const:string" type="showhide">
							<param name="groups" type="list" multiple="true" size="10" blanktext="" label="Groups" description="Select the groups to join or leave based off mode." validate="required">
								<data name="" type="private" class="cbautoactionsActionGroupJive" method="groups" />
							</param>
						</if>
						<if name="mode" nametype="param:string" operator="=" value="1" valuetype="const:string" type="showhide">
							<param name="status" type="list" default="1" label="Status" description="Select status of the user for the specified groups.">
								<option value="-1">Banned</option>
								<option value="0">Inactive</option>
								<option value="1">Active</option>
								<option value="2">Moderator</option>
								<option value="3">Admin</option>
								<option value="4">Owner</option>
							</param>
						</if>
						<if name="mode" nametype="param:string" operator="in" value="2|*|3" valuetype="const:string" type="showhide">
							<param name="name" type="text" label="Name" description="Input substitution supported category or group name." size="50" validate="required" />
							<if name="mode" nametype="param:string" operator="=" value="2" valuetype="const:string" type="showhide">
								<param name="category" type="list" hideblanktext="always" label="Category" description="Select group category.">
									<option value="-1">New Category</option>
									<data name="" type="private" class="cbautoactionsActionGroupJive" method="categories" />
								</param>
								<if name="category" nametype="param:int" operator="=" value="-1" valuetype="const:int" type="showhide">
									<param name="category_name" type="text" label="Category Name" description="Input substitution supported category name." size="50" validate="required" />
									<param name="category_parent" type="list" hideblanktext="always" label="Parent" description="Optionally select category parent.">
										<option value="0">No Parent</option>
										<data name="" type="private" class="cbautoactionsActionGroupJive" method="categories" />
									</param>
									<param name="category_types" type="list" multiple="true" default="1|*|2|*|3" blanktext="" label="Category Types" description="Select available group types for this category. Types determine the way a groups is joined (e.g. Invite requires new users to be invited to join a group)." validate="required">
										<option value="1">Open</option>
										<option value="2">Approval</option>
										<option value="3">Invite</option>
									</param>
									<param name="category_description" type="textarea" rows="10" label="Category Description" description="Optionally input substitution supported category description." cssclass="input-block" />
									<param name="category_unique" type="yesno" default="1" label="Category Unique" description="Select if category should be unique to the owner. When checking if a category exists by name it will also check if exists by owner user id. If disabled only name is checked." />
								</if>
								<param name="group_parent" type="list" hideblanktext="always" label="Parent" description="Optionally select group parent.">
									<option value="0">No Parent</option>
									<data name="" type="private" class="cbautoactionsActionGroupJive" method="groups" />
								</param>
								<param name="type" type="list" default="1" label="Type" description="Select group type. Type determines the way your group is joined (e.g. Invite requires new users to be invited to join your group).">
									<option value="1">Open</option>
									<option value="2">Approval</option>
									<option value="3">Invite</option>
								</param>
							</if>
							<if name="mode" nametype="param:string" operator="=" value="3" valuetype="const:string" type="showhide">
								<param name="parent" type="list" hideblanktext="always" label="Parent" description="Optionally select category parent.">
									<option value="0">No Parent</option>
									<data name="" type="private" class="cbautoactionsActionGroupJive" method="categories" />
								</param>
								<param name="types" type="list" multiple="true" default="1|*|2|*|3" blanktext="" label="Types" description="Select available group types for this category. Types determine the way a groups is joined (e.g. Invite requires new users to be invited to join a group)." validate="required">
									<option value="1">Open</option>
									<option value="2">Approval</option>
									<option value="3">Invite</option>
								</param>
							</if>
							<param name="description" type="textarea" rows="10" label="Description" description="Optionally input substitution supported category or group description." cssclass="input-block" />
							<param name="owner" type="text" label="Owner" description="Input substitution supported owner as single integer user_id. Leave blank to use trigger user as the owner." size="10" />
							<param name="unique" type="yesno" default="1" label="Unique" description="Select if group or category should be unique to the owner. When checking if a group or category exists by name it will also check if exists by owner user id. If disabled only name is checked." />
							<if name="mode" nametype="param:string" operator="=" value="2" valuetype="const:string" type="showhide">
								<if name="unique" nametype="param:int" operator="=" value="0" valuetype="const:int" type="showhide">
									<param name="autojoin" type="yesno" default="1" label="Auto Join" description="Select if group should be automatically joined if duplicate found." />
									<if name="autojoin" nametype="param:int" operator="=" value="1" valuetype="const:int" type="showhide">
										<param name="group_status" type="list" default="1" label="Group Status" description="Select status of the user when auto joining.">
											<option value="-1">Banned</option>
											<option value="0">Inactive</option>
											<option value="1">Active</option>
											<option value="2">Moderator</option>
											<option value="3">Admin</option>
											<option value="4">Owner</option>
										</param>
									</if>
								</if>
							</if>
						</if>
					</params>
				</then>
				<else>
					<param name="" type="spacer" display="2lines" label="" default="CB GroupJive 2.x installation not found!" />
				</else>
			</if>
		</view>
	</views>
